import "svelte/motion" into {tweened}

fn createFerrersDiagram {
    @partition

    let dots <+ []
    let partCount <+ partition.length

    for i : 0 -> partCount {
        for j : 0 -> partition[i] {
            dots.push({
                :x j
                :y i
                :color "gray"
            })
        }
    }

    let {subscribe} <+ tweened(
        dots
        :duration 1000
    )

    => {
        :subscribe subscribe
    }
}

export default createFerrersDiagram
